<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/mainLayout"
    app:cardCornerRadius="@dimen/_5sdp"

    android:layout_margin="@dimen/_10sdp"
    >




<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/img_house"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_130sdp"

        android:scaleType="fitXY"
        android:src="@drawable/text_img"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_25sdp"

            android:scaleType="fitXY"
            android:src="@drawable/profile"

            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="kimtaehee"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/img_house"
            android:layout_marginLeft="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/img_like"

            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_like"

            />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="15"

            android:layout_marginStart="@dimen/_2sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold"

       />
        <ImageView
            android:id="@+id/img_comment"

            android:layout_marginStart="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_22sdp"
            android:layout_marginTop="@dimen/_3sdp"


            android:scaleType="fitXY"
            android:src="@drawable/icon_comment"

            />

        <ImageView
            android:id="@+id/img_options"

            android:layout_marginStart="@dimen/_10sdp"
            android:layout_width="@dimen/_5sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"

            android:scaleType="fitXY"
            android:src="@drawable/icon_setting"

            />

    </LinearLayout>
    <TextView
        android:id="@+id/tv_house_price"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="직접 컵홀더 만들어서 들고 다니니까 너무 예쁘고 편한 것 같다 헤헤"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"

        app:layout_constraintTop_toBottomOf="@+id/tv_house_name"
        android:layout_marginLeft="@dimen/_15sdp" />


</LinearLayout>










</androidx.cardview.widget.CardView>