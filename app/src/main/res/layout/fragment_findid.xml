<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_password_layout">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:text="조회되는 아이디가 없습니다."
            android:textColor="@color/red0"
            android:textSize="15sp" />


        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="left"-->
        <!--            android:fontFamily="@font/roboto"-->
        <!--            android:layout_marginTop="@dimen/_30sdp"-->
        <!--            android:layout_marginStart="@dimen/_10sdp"-->
        <!--            android:text="아이디"-->
        <!--            android:textColor="@color/dark_gray"/>-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_email_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:hint="이름"
            android:textColorHint="@color/dark_gray"
            app:counterEnabled="false"
            app:endIconMode="clear_text"
            app:helperTextTextColor="@android:color/holo_red_light"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/colorPrimaryDark1"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:counterMaxLength="20"


                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_password_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:hint="전화번호(숫자만 적으세요)"

            android:textColorHint="@color/dark_gray"
            app:counterEnabled="false"
            app:counterMaxLength="20"
            app:endIconMode="clear_text"
            app:helperTextTextColor="@android:color/holo_red_light"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/ed_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHint="@color/dark_gray"

                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"
                app:counterMaxLength="20"

                />

        </com.google.android.material.textfield.TextInputLayout>




        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="@dimen/_5ssp"

            app:cardMaxElevation="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/layout_remember"
            app:strokeColor="@color/colorPrimary"
            app:strokeWidth="@dimen/_1sdp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:drawablePadding="@dimen/_18sdp"
                android:fontFamily="@font/articulatcf_demi_normal"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_10ssp"
                android:text="아이디 조회"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:textStyle="bold"

                />



        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:drawablePadding="@dimen/_18sdp"
                android:fontFamily="@font/articulatcf_demi_normal"
                android:gravity="center"
                android:padding="@dimen/_8sdp"
                android:paddingStart="@dimen/_10ssp"
                android:text="로그인  |  회원가입"
                android:textAlignment="center"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>