<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android .com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OnBoardActivity">




        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"

            android:layout_marginStart="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/img_search"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"

                android:scaleType="fitXY"
                android:src="@drawable/nav_search"
                android:layout_gravity="center_vertical"
                app:tint="@color/colorPrimary"
                />

            <EditText
                android:id="@+id/ed_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="북가좌동"

                android:layout_marginStart="@dimen/_10sdp"
                android:padding="@dimen/_6sdp"
                android:textSize="@dimen/_12ssp"



                />
            <ImageView
                android:id="@+id/img_location"
                android:layout_marginStart="@dimen/_7sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_scope"
                android:layout_gravity="center_vertical"
                app:tint="@color/colorPrimary"
                />
        </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="‘북가좌동’ 검색결과"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15ssp"
        android:layout_marginStart="@dimen/_12sdp"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        />


    <EditText
        android:id="@+id/et_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="서울 서대문구 북가좌동"

        android:layout_marginStart="@dimen/_10sdp"
        android:padding="@dimen/_6sdp"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_5sdp"

        app:layout_constraintTop_toBottomOf="@+id/tv"

        />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="드래그해서 위치를 설정하세요"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginStart="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@+id/et_"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/_16sdp"
        />


    <ImageView
        android:id="@+id/vector_image_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_450sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:scaleType="centerCrop"


        app:layout_constraintTop_toBottomOf="@+id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:srcCompat="@drawable/map_1" />
</androidx.constraintlayout.widget.ConstraintLayout>