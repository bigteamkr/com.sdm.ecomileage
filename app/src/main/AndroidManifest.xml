<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sdm.ecomileage">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ARSeJong">
        <activity
            android:name="com.sdm.ecomileage.activities.HomeActivity"
            android:exported="true" />
        <activity
            android:name="com.sdm.ecomileage.activities.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.ARSeJong.NoActionBar"
            >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sdm.ecomileage.activities.OnBoardActivity"
            android:exported="true"
            android:theme="@style/Theme.ARSeJong.NoActionBar" />
    </application>
</manifest>